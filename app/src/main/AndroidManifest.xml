<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sanhedao.lawcloudserver">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--加载本地图片要先获取图片大小信息的权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.QualificationCertificationActivity" />
        <activity android:name=".activity.LawyerCertificationActivity"></activity>
        <activity android:name=".activity.ForgotPasswordActivity" />
        <activity android:name=".activity.SetActivity" ></activity>
        <activity android:name=".activity.HomePageActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".activity.UserCenterSetActivity"/>
        <activity android:name=".activity.SetUserDataActivity"/>
        <activity android:name=".activity.SetDataActivity"/>
        <activity android:name=".activity.WaitActivity"/>
        <activity android:name=".activity.GetOrderActivity"/>
        <activity android:name=".activity.RobOrderActivity"/>
        <activity android:name=".activity.AccountPasswordActivity"/>
        <activity android:name=".activity.SetPasswordActivity"/>
        <activity android:name=".activity.FeedbackActivity"/>

    </application>

</manifest>