<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAEAEA">



    <!--title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@mipmap/back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/question_describe"
            android:textColor="#000000"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#f4f3f4" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <include layout="@layout/itme_home_page_order"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <View
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:background="@drawable/shape_question_describe"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_describe2"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="#3cb2eb"/>



        </LinearLayout>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:text="法律概念是指法律对各种具有法律意义的事物状态、行为进行概括而形成的专门术语。例如《刑法》第14条规定：“明知自己的行为会发生危害社会的结果并且希望或者放任这种结果发生，因而构成犯的，是故意犯罪这里就规定了“故意犯罪”的概念。"
            android:textColor="#666666"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_orders"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#3cb2eb"
        android:textSize="16sp"
        android:text="接单"
        android:gravity="center"
        android:textColor="#fff"/>


</LinearLayout>